{
  "name": "furaha",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "furaha",
  "sourceRoot": "apps/furaha/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/furaha",
        "index": "apps/furaha/src/index.html",
        "main": "apps/furaha/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/furaha/tsconfig.app.json",
        "assets": [
          "apps/furaha/src/favicon.ico",
          "apps/furaha/src/assets",
          {
            "glob": "*.svg",
            "input": "libs/shared/icon/src/lib/svg/",
            "output": "svg"
          }
        ],
        "styles": [
          "apps/furaha/src/styles.scss",
          "node_modules/aos/dist/aos.css"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/shared/theme/src/lib/styles"]
        },
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "furaha:build:production"
        },
        "development": {
          "browserTarget": "furaha:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "furaha:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/furaha/**/*.ts", "apps/furaha/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/furaha/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
